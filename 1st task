// BrickWork.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;


int main()
{
    
    unsigned long a[100][100];
    int row, col, i, j, C = 0, S=1;
    cout << "Enter the Rows and Columns for the first layer of the brickwork: " << endl;

    cin >> row >> col;

    if ((row % 2 != 0) || (col % 2 != 0)) // check if the Rows and Columns are even
    {
        cout << "-1 " << endl;
        return 0;
    }

    if ((row<0) || (col<0)) // check if the numbers are smaller than 0
    {
        cout << "-1 " << endl;
        return 0;
    }

    if ((row > 100) || (col > 100)) // check if the numbers are bigger than 100
    {
        cout << "-1 " << endl;
        return 0;
    }

    cout << "Enter the numbers for the bricks: " << endl; 

    for (i = 0; i < row; i++)
    {
        for (j = 0; j < col; j++)
        
                cin >> a[i][j];
        
    }

    if (a[i][j] != a[i + 1][j] || a[i][j] != a[i][j + 1] || a[i][j] != a[i - 1][j] || a[i][j] != a[i][j - 1])
    
        {
            cout << "-1 " << endl;
            return 0;
        }
    
    

    for (i = 0; i < row; i++) // check if some of the numbers of the bricks is more or less than 2
    {
        for (j = 0; j < col; j++)
        {
            C = a[i][j];
            for (i = 1; i < row; i++)
            {
                for (j = 0; j < col; j++)
                
                    if (C == a[i][j])

                        S += 1;
                

                if ((S > 2) || (S<2))
                {
                    cout << "-1 " << endl;
                    return 0;
                }
                
            }
        }
    }
    
    for (i = 0; (i < row-1) && (i % 2 == 0); i++) //start the swaping of the number so whole brick does not lay on another one
    {
        for (j = 0; j < col; j++)
        {
            if (a[0][0] == a[1][0])
                swap(a[1][0], a[0][1]);

            if (a[i][j] == a[i + 1][j] && a[i][j + 1] == a[i + 1][j + 1]) // if 2 bricks are vertical the swaping is not going to be right, we have to change the direction of the swaping and the second brick to lose round
            {
                swap(a[i][j], a[i + 1][j + 1]);
                swap(a[i][j + 2], a[i + 1][j + 3]);

            }

            if (a[i][j] == a[i + 1][j])
            {
                swap(a[i][j], a[i + 1][j - 1]);
            }

            else
                swap(a[i][j], a[i+1][j+1]);

        }
    }


    cout << "The second layer of the brickwork is: " << endl;

    for (i = 0; i < row; i++)
    {
        for (j = 0; j < col; j++)
        {

                cout << a[i][j] << "  ";

        }

        cout << endl;
                 
    }
    return(0);
}


